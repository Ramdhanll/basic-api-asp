}

<div class="container" style="margin-top: 50px; height: 100vh">
    @*Hero Section*@
    <div class="row mt-10">
        <div class="col">
            <div class="bike-delivery px-2 py-1 shadow-sm rounded mb-3">Bike Delivery</div>

            <h1 class="fw-bold hero-title">The Fastest Delivery <br /> in <span style="color: #DD5F00">Your City</span></h1>
